        "# Gradient Tape"
      ]
    },
    {
      "cell_type": "code",
      "metadata": {
        "id": "mhVgj0DUcfa5",
        "colab_type": "code",
        "colab": {
          "base_uri": "https://localhost:8080/",
          "height": 51
        },
        "outputId": "a8ae3bc1-d7db-47d4-fb61-193a724454ea"
      },
      "source": [
        "import tensorflow as tf \n",
        "\n",
        "x = tf.constant(4.0)\n",
        "\n",
        "with tf.GradientTape(persistent=True) as g:\n",
        "  g.watch(x)\n",
        "  y = x * x\n",
        "  z = y * y\n",
        "\n",
        "dz_dx = g.gradient(z, x) \n",
        "dy_dx = g.gradient(y, x)\n",
        "\n",
        "print(dz_dx)\n",
        "print(dy_dx)\n",
        "\n",
        "del g # Drop the reference to the tape"
      ],
      "execution_count": 1,
      "outputs": [
        {
          "output_type": "stream",
